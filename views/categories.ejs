<html>
    <head>
        <link rel="stylesheet" href="/styles.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>
    <body>
        <%- include('header') %>
        <main>
            <div class="title">
                <h2>üè∑Ô∏è Categories</h2>
                <a href="/categories/add" class="button iconButton">
                    <span class="material-icons">add</span>
                </a>
            </div>
            <div class="categoriesContainer">
                <table class="categoriesList">
                    <tr>
                        <th>Name</th>
                        <th>Products</th>
                        <th>Items</th>
                        <th>Value</th>
                        <th></th>
                    </tr>
                    <% categories.forEach(category => { %>
                        <tr>
                            <td>
                                <a href="/products?c=<%= category.name %>" class="category">
                                    <%= category.name %>
                                </a>
                            </td>
                            <td><%= inventory[category.name].products %></td>
                            <td><%= inventory[category.name].quantity %></td>
                            <td>$<%= inventory[category.name].value.toFixed(2) %></td>
                            <td>
                                <a href="/categories/<%= category.id %>/edit">
                                    <button class="iconButton">
                                        <span class="material-icons">edit</span>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </table>
            </div>
        </main>
    </body>
</html>