<html>
    <head>
        <link rel="stylesheet" href="/styles.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>
    <body>
        <%- include('header') %>
        <main>
            <h2>üè∑Ô∏è Add a category</h2>
            <form action="/categories/add" method="POST" class="main">
                <label for="name">Name</label>
                <input type="text" name="name" value="<%= locals.fields ? fields.name  : "" %>">
                <div class="error"><%= locals.errors && "name" in locals.errors ? errors.name.msg : "" %></div>
                <div class="buttonContainer">
                    <button>Submit</button>
                    <a href="/categories" class="button secondary">Cancel</a>
                </div>
            </form>
        </main>
    </body>
</html>